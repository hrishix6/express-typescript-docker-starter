{
  "name": "express-typescript-starter",
  "version": "1.0.0",
  "private": "true",
  "description": "boilerplate for express based application with typescript",
  "main": "dist/main.js",
  "engines": {
    "node": ">=16.x.x"
  },
  "scripts": {
    "lint": "eslint --ext .ts src/",
    "format": "prettier --write src/**/*.ts",
    "build": "rimraf ./dist && tsc -p tsconfig.build.json",
    "check-formatting": "prettier --check src/**/*.ts",
    "test": "jest",
    "start:dev": "rimraf ./dist && tsc-watch -p tsconfig.build.json --onSuccess \"nodemon --inspect=0.0.0.0 ./dist/main.js\"",
    "test-cov": "jest --coverage",
    "start:prod": "node ./dist/main.js"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.14",
    "@types/jest": "^29.2.3",
    "@types/node": "^18.11.9",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "jest": "^29.3.1",
    "nodemon": "^2.0.20",
    "prettier": "^2.8.0",
    "rimraf": "^3.0.2",
    "supertest": "^6.3.1",
    "ts-jest": "^29.0.3",
    "tsc-watch": "^5.0.3",
    "typescript": "4.8.x"
  },
  "dependencies": {
    "dotenv": "^16.0.3",
    "express": "^4.18.2"
  },
  "jest": {
    "preset": "ts-jest",
    "clearMocks": true,
    "coverageDirectory": "../coverage",
    "coverageProvider": "v8",
    "rootDir": "./src",
    "transform": {
      "^.+\\.(ts|tsx)?$": "ts-jest"
    }
  }
}
